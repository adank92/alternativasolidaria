<div class="card shadow rounded">
  <div class="card-header">
    <div class="d-flex align-content-center align-items-center">
      <h4 class="m-0">
        <%= @team.name %>
        <% unless @team.final? %>
          <small class="font-italic">(borrador)</small>
        <% end %>
      </h4>

      <div class="ml-auto"><%= link_to 'Volver', teams_path, class: 'btn btn-primary' %></div>
    </div>
  </div>
  <div class="card-body">
    <%= render 'form', team: @team %>
  </div>
</div>
