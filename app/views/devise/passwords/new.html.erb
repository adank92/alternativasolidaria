<div class="card shadow rounded">
  <h3 class="card-header">Reestablecer contraseña</h3>
  <div class="card-body">
    <% content_for :devise_form do %>
      <%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        <div class="input-group">
          <%= f.submit "Enviar instrucciones para reestablecer la contraseña", class: "btn btn-primary" %>
        </div>
      <% end %>
      <hr class="mt-6 border" />
      <%= render "devise/shared/links" %>
    <% end %>
    <%= render "devise/shared/form_wrap" %>
  </div>
</div>