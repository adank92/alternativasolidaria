<% content_for :devise_form do %>

  <h2 class="pt-4 mb-8 text-4xl font-bold heading">Registro colaboradores</h2>

  <h3 class="mb-8">
    ¡Gracias por sumarte a Alternativa Solidaria!
    Por favor completá el formulario y  en breve nos contactaremos con vos.
    Muchas gracias!
  </h3>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="input-group">
      <%= f.label :first_name, class:"label" %>
      <%= f.text_field :first_name, class:"input" %>
    </div>

    <div class="input-group">
      <%= f.label :last_name, class:"label" %>
      <%= f.text_field :last_name, class:"input" %>
    </div>

    <div class="input-group">
      <%= f.label :email, class:"label" %>
      <%= f.email_field :email, autocomplete: "email", class:"input" %>
    </div>

    <div data-controller="province" data-province-locations-url="<%= localities_path %>">
      <div class="input-group">
        <%= f.label :province_id, class: 'label' %>
        <%= select_tag :province_id, options_from_collection_for_select(Province.all, :id, :name), class: 'input', data: { target: 'province.provinceId', action: 'province#findLocalities' } %>
      </div>

      <div class="input-group">
        <%= f.label :locality_id, class:"label" %>
        <%= f.collection_select :locality_id, Locality.all, :id, :name, {}, class: 'input', data: { target: 'province.localityId' } %>
      </div>
    </div>

    <div class="input-group">
      <%= f.label :address, class:"label" %>
      <%= f.text_field :address, class:"input" %>
    </div>

    <div class="input-group">
      <%= f.label :phone, class:"label" %>
      <%= f.text_field :phone, class:"input" %>
    </div>

    <div class="input-group">
      <div class="flex">
        <%= f.label :password, class: "label" %>
        <% if @minimum_password_length %>
          <span class="pl-1 text-xs text-grey-dark"><em>(minimo <%= @minimum_password_length %> caracteres)</em></span>
        <% end %>
      </div>
      <%= f.password_field :password, autocomplete: "new-password", class: "input" %>
    </div>

    <div class="input-group">
      <%= f.label :password_confirmation, class:"label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input" %>
    </div>

    <div class="input-group">
      <%= f.submit class: "btn btn-default" %>
    </div>

  <% end %>

<% end %>

<%= render "devise/shared/form_wrap" %>
