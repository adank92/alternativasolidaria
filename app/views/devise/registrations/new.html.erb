<% content_for :devise_form do %>
  <h2 class="pt-4 mb-8 text-4xl font-bold heading">Registro colaboradores</h2>
  <h4 class="mb-5">
    ¡Gracias por sumarte a Alternativa Solidaria!
    Por favor completá el formulario y en breve nos contactaremos con vos.
    Muchas gracias!
  </h3>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="form-row">
      <div class="form-group col-md-4">
        <%= f.label :first_name, class:"label" %>
        <%= f.text_field :first_name, class:"form-control" %>
      </div>
      <div class="form-group col-md-4">
        <%= f.label :last_name, class:"label" %>
        <%= f.text_field :last_name, class:"form-control" %>
      </div>
      <div class="form-group col-md-4">
        <%= f.label :email, class:"label" %>
        <%= f.email_field :email, autocomplete: "email", class:"form-control" %>
      </div>
    </div>
    <div data-controller="province" data-province-locations-url="<%= localities_path %>">
      <div class="form-row">
        <div class="form-group col-md-6">
          <%= f.label :province_id, class: 'label' %>
          <%= select_tag :province_id, options_from_collection_for_select(Province.all, :id, :name), class: 'form-control', data: { target: 'province.provinceId', action: 'province#findLocalities' } %>
        </div>
        <div class="form-group col-md-6">
          <%= f.label :locality_id, class:"label" %>
          <%= f.collection_select :locality_id, Locality.all, :id, :name, {}, class: 'form-control', data: { target: 'province.localityId' } %>
        </div>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-6">
        <%= f.label :address, class:"label" %>
        <%= f.text_field :address, class:"form-control" %>
      </div>
      <div class="form-group col-md-6">
        <%= f.label :phone, class:"label" %>
        <%= f.text_field :phone, class:"form-control" %>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-6">
        <div class="flex">
          <%= f.label :password, class: "label" %>
          <% if @minimum_password_length %>
            <span class="pl-1 text-xs text-grey-dark"><em>(minimo <%= @minimum_password_length %> caracteres)</em></span>
          <% end %>
        </div>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      </div>
      <div class="form-group col-md-6">
        <%= f.label :password_confirmation, class:"label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group">
        <%= f.submit class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
<% end %>
<%= render "devise/shared/form_wrap" %>
