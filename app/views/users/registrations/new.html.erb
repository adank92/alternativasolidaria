<div class="card shadow rounded">
  <% content_for :devise_form do %>
    <h3 class="card-header">Registro colaboradores</h3>
    <div class="card-body">
      <p class="mb-4">
        ¡Gracias por tu interes en sumarte a Alternativa Solidaria!
        Por favor completá el formulario y en breve nos contactaremos con vos.
        Muchas gracias!
      </p>
      <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render 'form', f: f %>
      <% end %>
    </div>
  <% end %>
  <%= render "devise/shared/form_wrap" %>
</div>
