<% content_for(:container) { 'container-fluid' } %>

<div class="card shadow rounded">
  <div class="card-header">
    <div class="d-flex align-content-center">
      <h3 class="m-0">Plantillas de Equipos</h3>
      <div class="ml-auto"><%= link_to 'Crear plantilla', new_team_template_path, class: 'btn btn-primary' %></div>
    </div>
  </div>
  <div class="card-body">
    <%= bootstrap_form_for @search, as: :search, url: team_templates_path do |f| %>
      <div class="form-row">
        <%= f.hidden_field :page %>
        <%= f.text_field :text, placeholder: 'Buscar...', data: { controller: "tabular", action: 'input->tabular#search' }, wrapper: { class: 'col-2' } %>
      </div>

      <div class="row">
        <div class="col d-flex justify-content-between align-items-center mt-3">
          <span>Mostrando <%= pluralize(@pagy.count, 'plantilla', plural: 'plantillas') %></span>
          <div class="float-right">
            <%= render 'shared/paginator' %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col">
          <div class="table-responsive">
            <table class="table table-striped table-bordered">
              <thead class="thead-dark">
              <tr>
                <th scope="col">
                  Nombre
                </th>
                <th scope="col">
                  Entrega
                </th>
                <th scope="col">
                  Retira
                </th>
                <th scope="col">
                  Cantidad
                </th>
                <th scope="col">
                </th>
              </tr>
              </thead>
              <tbody>
              <% @records.each do |team_template| %>
                <tr>
                  <td>
                    <%= link_to team_template.name, edit_team_template_path(team_template) %>
                    <% unless team_template.final? %>
                      <small class="font-italic">(borrador)</small>
                    <% end %>
                  </td>
                  <td>
                    <%= collaborator_names(team_template.drop_off_collaborators) %>
                  </td>
                  <td>
                    <%= collaborator_names(team_template.pick_up_collaborators) %>
                  </td>
                  <td>
                    <%= team_template.chef_collaborations.sum(:meal_quantity) %>
                  </td>
                  <td>
                    <%= link_to '<i class="fas fa-plus-square"></i>'.html_safe, team_template_teams_path(team_template), method: :post, title: "Crear equipo" %>
                    <%= link_to '<i class="fas fa-trash"></i>'.html_safe, team_template_path(team_template), method: :delete, title: "Borrar", data: { confirm: 'Estas seguro/a?' } %>
                  </td>
                </tr>
              <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>

      <div class="row float-right">
        <div class="col">
          <%= render 'shared/paginator' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
